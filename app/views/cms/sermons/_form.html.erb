<script type="text/javascript">
  $(function() {
    $('textarea').tinymce({
      theme: 'advanced',
			plugins: "table",
			relative_urls: false,
			theme_advanced_toolbar_location : "top",
			theme_advanced_buttons1 : "bold,italic,underline,|,formatselect,|,bullist,numlist,code,|,link,unlink,hr,tablecontrols",
			theme_advanced_buttons2 : "",
			theme_advanced_buttons3 : "",
			theme_advanced_toolbar_align : 'left'
    });
  });
</script>
<%= form_for @sermon, :url => @path do |f| %>
	<%= f.hidden_field :group_id, :value => @sermon.group_id ||= @group_id %>	
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_area :content, :class => "ckeditor" %>
	</div>
	<div class="field">
		<%= f.label :date %><br />
		<%= f.text_field :date, :class => 'datepicker' %>
	</div>
	<div class="field">
		<%= f.label :author %><br />
		<%= f.collection_select :person_id, Person.all, :id, :name %>
	</div>	
	<div class="button confirm_button">
			<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>